{
  "name": "users-service",
  "version": "0.0.7",
  "description": "Users Service",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "start": "nodemon ./dist/index.js",
    "install:prod": "npm install --production",
    "lint": "eslint -c .eslintrc.json --no-error-on-unmatched-pattern ./src/**/*",
    "lint:fix": "eslint -c .eslintrc.json --no-error-on-unmatched-pattern ./src/**/* --fix",
    "test": "tsc && jest --maxWorkers=1 --testPathPattern .spec.ts$",
    "test:unit": "tsc && jest --testPathPattern .manager.spec.ts$ .repository.spec.ts$ .utils.spec.ts$",
    "test:integration": "tsc && jest --maxWorkers=1 --testPathPattern .router.spec.ts$",
    "coverage": "tsc && jest --coverage",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/yesodot/selenium/blueomek/users-service.git"
  },
  "author": "Daniel Ventura",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "env-var": "^7.0.1",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "http": "0.0.1-security",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.7",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongoose": "^5.7.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.0.0",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^27.4.7",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "standard-version": "^9.3.2",
    "supertest": "^4.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^8.6.2",
    "typescript": "^3.9.9"
  }
}
